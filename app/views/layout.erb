  </head>
  <body>

    <nav class="teal">
      <div class="nav-wrapper container">
        <a href="/" class="brand-logo" style="font-family: Copperplate;font-size:50px">Stay Active</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
         <% if !is_logged_in? %>
            <li><a href="/signup">Signup</a></li>
            <li><a href="/login">Login</a></li>
        <% else %>
            <li><a href="/activities/new">Create a New Activity</a></li>
            <li><a href="/activities">Activities</a></li>
            <li><a href="/logout">Logout</a></li>
        <% end %>
        </ul>
      </div>
    </nav>

    <div class="container errors">
  
      <% if flash[:errors] %>
        <% flash[:errors].each do |error|%>
          <p><%= error %></p>
        <% end %>
      <% end %>
    </div>
    <div class="container" >
    <%= yield %>
    </div>
  <main class="display flexbox" style="bottom:0;left:0;width:100%;margin-top:10px;text-align: center">
       <footer class="teal  page-footer">
          <div class="container" style ="text:center">
            <div class="row valign-wrapper; text-align: center">
              <div class = "col s3">
                <a href="#" class="grey-text text-lighten-4">Contact Us</a> 
              </div>
              <div class = "col s3">
                <a href="#" class="grey-text text-lighten-4">Facebook</a>
              </div>
              <div class = "col s3">
                <a href="#" class="grey-text text-lighten-4">Twitter</a>
              </div>
              <div class = "col s3">
                <a href="#" class="grey-text text-lighten-4">Instagram</a>
              </div>
     
            </div>
          </div>

        </footer>
      </main>
    

